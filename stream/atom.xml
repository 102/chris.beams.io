---
layout: nil
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 <title>{{ site.title }}</title>
 <link href="{{ site.feedurl }}/stream" rel="self"/>
 <link href="{{ site.url }}/stream"/>
 <id>{{ site.url }}</id>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <author>
   <name>{{ site.author.name }}</name>
   <email>{{ site.author.email }}</email>
 </author>
 {% for entry in site.posts %}
 <entry>
   <title>{{ entry.title }} ({{ entry.dir | remove_first: '/' }})</title>
   <link href="{{ site.url }}{{ entry.url }}"/>
   <id>{{ site.url }}{{ entry.id }}</id>
   {% for category in entry.categories %}
   <category term="{{ category }}"/>
   {% endfor %}
   <published>{{ entry.date | date_to_xmlschema }}</published>
   {% if entry.updated %}
   <updated>{{ entry.updated | date_to_xmlschema }}</updated>
   {% else %}
   <updated>{{ entry.date | date_to_xmlschema }}</updated>
   {% endif %}
   <content type="html">{{ entry.content | xml_escape }}</content>
 </entry>
 {% endfor %}
</feed>
